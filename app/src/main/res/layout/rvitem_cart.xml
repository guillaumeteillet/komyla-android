<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    >

    <TextView
        android:id="@+id/productQuantity"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:text="3"
        android:textSize="18sp"
        android:textColor="#646464"
        android:gravity="right"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/product"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/productQuantity"
        android:layout_toEndOf="@+id/productQuantity"
        >

        <TextView
            android:id="@+id/productName"
            android:text="Coca-Cola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            />

        <TextView
            android:id="@+id/productDesc"
            android:layout_below="@id/productName"
            android:text="Y'a des bulles !!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#646464"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:textStyle="italic"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/product"
        android:layout_toEndOf="@+id/product"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        >

        <ImageButton
            android:id="@+id/reduceQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ImageButton
            android:id="@+id/increaseQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/reduceQuantity"
            android:layout_toRightOf="@id/reduceQuantity"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.50€"
            android:textSize="13sp"
            android:textColor="#646464"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/productTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11€"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/productPrice"
            />

    </RelativeLayout>

</RelativeLayout>